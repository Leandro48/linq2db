<Project Sdk="Microsoft.NET.Sdk">
	<Import Project="..\..\Build\linq2db.Source.props" />

	<PropertyGroup>
		<AssemblyName>linq2db.CodeGen</AssemblyName>
		<RootNamespace>LinqToDB.CodeGen</RootNamespace>

		<DocumentationFile>bin\$(Configuration)\$(TargetFramework)\linq2db.CodeGen.xml</DocumentationFile>
		<TargetFrameworks>netstandard2.0</TargetFrameworks>
		<WarningsAsErrors>true</WarningsAsErrors>
	</PropertyGroup>

	<ItemGroup>
	  <Compile Remove="Metadata\**" />
	  <EmbeddedResource Remove="Metadata\**" />
	  <None Remove="Metadata\**" />
	</ItemGroup>

	<ItemGroup>
	  <Compile Include="..\LinqToDB\Compatibility\System\Diagnostics\CodeAnalysis\NullableAttributes.cs" Link="Compat\NullableAttributes.cs" />
	</ItemGroup>

	<ItemGroup>
		<ProjectReference Include="..\LinqToDB\LinqToDB.csproj" />

		<PackageReference Include="Microsoft.Extensions.Configuration.Abstractions" />
		<PackageReference Include="Microsoft.Extensions.Configuration.Binder" />
		<PackageReference Include="Humanizer.Core" />
	</ItemGroup>
</Project>
